    "start": "tsc && node build/index.js",
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "author": "Jérémy Buget",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jbuget/nodejs-clean-architecture-app.git"
  },
  "dependencies": {
