    "sequelize": "^5.21.1"
  },
  "devDependencies": {
    "@types/hapi": "^18.0.2",
    "@types/node": "^12.11.5",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "sqlite3": "^4.1.0",
    "typescript": "^3.6.4"
  },
  "engines": {
    "node": ">=12",
